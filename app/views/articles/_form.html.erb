<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, value: @article.user_id || User.current.id %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <%= f.hidden_field :perma_link, value: @article.perma_link || User.current.ident + "-" + Time.now.to_s(:perma_link) %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :published_on %><br>
    <%= f.datetime_select :published_on %>
  </div>
  <div class="field">
    <%= f.label :approved %><br>
    <%= f.check_box :approved %>
  </div>

  <%= f.hidden_field :count %>

  <div class="field">
    <%= f.label :promote_headline %><br>
    <%= f.check_box :promote_headline %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <a id="preview">Preview</a>
  </div>
<% end %>

<div class="preview_area"></div>
