<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <%= f.hidden_field :perma_link %>

  <div class="field">
    <%= f.label :published_on %><br>
    <%= f.datetime_local_field :published_on, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :approved %>
    <%= f.check_box :approved %>
  </div>

  <div class="field">
    <%= f.label :promote_headline %>
    <%= f.check_box :promote_headline %>
  </div>

  <%= f.hidden_field :count %>

  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="write" data-toggle="tab" href="#write" id="write-tab" role="tab">Write</a>
    </li>
    <li role="presentation">
      <a aria-controls="preview" data-toggle="tab" href="#preview" id="preview-tab" role="tab">Preview</a>
    </li>
    <li role="presentation">
      <a aria-controls="photo" data-toggle="tab" href="#photo" id="photo-tab" role="tab">Photo</a>
    </li>
  </ul>

  <div class="field form-group">
    <div class="tab-content">
      <div class="tab-pane active" id="write" role="tabpanel">
	<%= f.text_area :content, class: "form-control", rows: 20, wrap: :off %>
      </div>
      <div class="tab-pane preview_area" id="preview" role="tabpanel">
      </div>
      <div class="tab-pane" id="photo" role="tabpanel">
        ここに埋める
      </div>
    </div>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
