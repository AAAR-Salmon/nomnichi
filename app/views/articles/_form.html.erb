<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, value: @article.user_id || User.current.id %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <%= f.hidden_field :perma_link, value: @article.perma_link || User.current.ident + "-" + Time.now.to_s(:perma_link) %>

  <div class="field">
    <%= f.label :published_on %><br>
    <%= f.datetime_select :published_on %>
  </div>

  <div class="field">
    <%= f.label :approved %>
    <%= f.check_box :approved %>
  </div>

  <div class="field">
    <%= f.label :promote_headline %>
    <%= f.check_box :promote_headline %>
  </div>

  <%= f.hidden_field :count %>

  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="write" data-toggle="tab" href="#write" id="write-tab" role="tab">Write</a>
    </li>
    <li role="presentation">
      <a aria-controls="preview" data-toggle="tab" href="#preview" id="preview-tab" role="tab">Preview</a>
    </li>
  </ul>

  <div class="field form-group">
    <div class="tab-content">
      <div class="tab-pane active" id="write" role="tabpanel">
        <% if controller.action_name == "new" %>
          <%= f.text_area :content, class: 'form-control', rows: 20, wrap: :off, value: "<!-- folding -->" %>
        <% else %>
          <%= f.text_area :content, class: 'form-control', rows: 20, wrap: :off %>
        <% end %>
      </div>
      <div class="tab-pane preview_area" id="preview" role="tabpanel">
      </div>
    </div>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
